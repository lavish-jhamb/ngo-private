.menu-wrapper{
  position:relative;
}

.menu-bar{
  overflow: hidden;
  background-color: #333;
  position: fixed;
  bottom: 10%;
  width: 90vw;
  height: 6vh;
  padding-top:0.2em;
  border-radius: 40px;
  background-color: #fff;
  box-shadow: 0px 8px 12px -2px rgba(255, 255, 255, 0.75);
  left: 50%;
  transform: translate(-50%,50%);
  display:flex;
  justify-content: space-around;
  align-items: center;
}

.toggle{
  color: #333;
}



